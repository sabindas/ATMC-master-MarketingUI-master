    <style>
        /* Manish CSS Starts */
        .logo {
            height: 60px;
            width: 70px;
        }

        * {
            box-sizing: border-box;
        }

        a {
            text-decoration: none;
        }

        .card {
            margin: 0px 50px 10px 50px;
        }

        .navbar {
            background-color: #fff !important;
            margin: 0px;
        }

        .profile {
