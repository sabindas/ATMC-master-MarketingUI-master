        }

        .wrapper {
            margin: 10px 50px 10px 40px;
            display: flex;
            background-color: #e9ecef;
            font-size: 12px;
        }

        .step {
            color: black;
            font-weight: bold;
            padding: 4%;
            text-align: center;
            object-fit: cover;
        }

        #step1 {
            color: #fff;
        }

        #step2 {
            color: rgba(70, 64, 64, 0.4);
        }

        #pointer0 {
            width: 100px;
            height: 30px;
            position: relative;
            background: #385f92;
            margin-left: 10px;
            text-align: center;
        }

        #pointer1 {
            width: 100px;
            height: 30px;
            position: relative;
            background: #385f92;
            margin-left: 10px;
            text-align: center;
        }

        #pointer2 {
            width: 100px;
            height: 30px;
            position: relative;
            background: #fff;
            margin-left: 10px;
            text-align: center;
        }

        #pointer0:before {
            content: "";
            position: absolute;
            right: -10px;
            bottom: 0;
            width: 0;
            height: 0;
            border-left: 10px solid #385f92;
            border-top: 15px solid transparent;
            border-bottom: 15px solid transparent;
        }

        #pointer1:before {
            content: "";
            position: absolute;
            right: -10px;
            bottom: 0;
            width: 0;
            height: 0;
            border-left: 10px solid #385f92;
            border-top: 15px solid transparent;
            border-bottom: 15px solid transparent;
        }

        #pointer1:after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 0;
            height: 0;
            border-left: 10px solid #e9ecef;
            border-top: 15px solid transparent;
            border-bottom: 15px solid transparent;
        }

        #pointer2:after {
