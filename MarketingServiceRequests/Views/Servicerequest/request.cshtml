
@{
    ViewBag.Title = "Request";
}

@using (Html.BeginForm()){
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div style="background-color:#015FB9;margin:10px 0px 0px 0px;padding:20px 10px 20px 10px;color:white;font-weight:bold">
            <h2>Marketing Services Request Form</h2>
        </div>
        <div class="form-group">
            <div class="col-md-4" style="padding:0px 0px 0px 20px;margin:0px 0px 0px 0px">
                @{
                    if (Session["UserName"] != null)
                    {
                        <h4> Welcome : @Session["UserName"] </h4>
                    }
                }
            </div>
            <div class="col-md-offset-7 col-md-1 pull-right" style="padding:7px 5px 0px 0px;">
                @Html.ActionLink("Logout", "LogOut", "Login")
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            <div class="col-md-3 ">
                <h3>Section 1 </h3>
            </div>
            <div class="col-md-7 pull-left">
                <h3> User Information </h3>
            </div>
            <div class="pull-right">
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "User")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 30px;"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-3 ">
                <h3>Section 2 </h3>
            </div>
            <div class="col-md-7 pull-left">
                <h3> Service Details  </h3>
            </div>
            <div class="pull-right">
                <div class="col-md-2">
                    <a href="@Url.Action("servicedetail", "Servicedetails")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 30px;"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-3 ">
                <h3>Section 3 </h3>
            </div>
            <div class="col-md-7 pull-left">
                <h3>  Service Level Agreement  </h3>
            </div>
            <div class="pull-right">
                <div class="col-md-2">
                    <a href="@Url.Action("Agreement", "ServiceAgreement")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 30px;"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <input type="submit" value="Submit" class="btn" style="background-color:#015FB9;color:white;" />
            </div>
        </div>
    </div>
}
