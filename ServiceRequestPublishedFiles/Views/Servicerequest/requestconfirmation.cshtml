
@{
    ViewBag.Title = "RequestConfirmation";
}

@using (Html.BeginForm("RequestConfirmation", "ServiceAgreement")){
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div style="background-color:#015FB9;margin:10px 0px 0px 0px;padding:20px 10px 20px 10px;color:white;font-weight:bold">
            <h2>Request Conﬁrmation</h2>
        </div>
        <div class="form-group">
            <div class="col-md-4" style="padding:0px 0px 0px 20px;margin:0px 0px 0px 0px">
                @{
                    if (Session["UserName"] != null)
                    {
                        <h4> Welcome : @Session["UserName"] </h4>
                    }
                }
            </div>
            <div class="col-md-offset-7 col-md-1 pull-right" style="padding:7px 5px 0px 0px;">
                @Html.ActionLink("Logout", "LogOut", "Login")
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ">
            <div class="col-md-12" style="font-size:20px;">
                <p>Thank you for your request from the Marketing department of IMC. </p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12" style="font-size:20px;">
                <p>I would like to inform you that we received your request (# 333999) and it is our pleasure to support you.</p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12" style="font-size:20px;">
                <p>Our marketing team is currently reviewing your request and we will get back to you within the coming 3 business days.  </p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12" style="font-size:20px;">
                <p>Thank you again,  </p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12">
                <p>Marketing Department  </p>
                <p>International Medical Center</p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12">                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <input type="submit" value="Done" class="btn" style="background-color:#015FB9;color:white;"  onclick="DoneClick()"/>
            </div>
        </div>
    </div>
}

<script>
    function DoneClick() {
        alert('Your request has been submitted successfully!');
    }
</script>
 

